# Example environment variables for server configuration
# Copy this to `.env` or set these in your environment
#
# These environment variables override settings in `config/server.toml`
# All variables use the `SERVER_` prefix followed by the config key

# Server network settings
SERVER_HOST=127.0.0.1
SERVER_PORT=50051

# Rate limiting (token bucket algorithm)
SERVER_RATE_LIMIT_REQUESTS_PER_MINUTE=60
SERVER_RATE_LIMIT_BURST=10

# Metrics
SERVER_METRICS_ENABLED=true
SERVER_METRICS_PORT=9090

# TLS configuration
SERVER_TLS_ENABLED=false
SERVER_TLS_CERT_PATH=
SERVER_TLS_KEY_PATH=

# Optional: Custom config file path (defaults to `config/server.toml`)
# SERVER_CONFIG_PATH=config/server.toml

# Example production TLS configuration:
# SERVER_TLS_ENABLED=true
# SERVER_TLS_CERT_PATH=/etc/certs/server.crt
# SERVER_TLS_KEY_PATH=/etc/certs/server.key

# Example for running on all interfaces:
# SERVER_HOST=0.0.0.0
# SERVER_PORT=50051
